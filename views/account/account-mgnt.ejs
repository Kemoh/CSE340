<!-- The content heading -->
<% if (title) { %>
  <h1><%= title %></h1>
<% } else { %>
  <% res.redirect('/') %>
<% } %>

<!-- Message block -->
<%- messages() %>

<!-- Display error -->
<% if (errors && !errors.isEmpty()) { %>
  <ul class="notice-registration">
    <% errors.array().forEach(error => { %>
      <% if (error.msg !== "Invalid value") { %>
        <li><%= error.msg %></li>
      <% } %>
    <% }) %>
  </ul>
<% } %>

<!-- Account Management Content -->
<section class="section-container">
  <% if (accountData) { %>
    <!-- Greeting -->
    <h2>Welcome <%= accountData.account_firstname %></h2>

    <!-- Update account info link (always visible) -->
    <p>
      <a href="/account/update/<%= accountData.account_id %>">Update Account Information</a>
    </p>

    <!-- Inventory Management section (only for Employee/Admin) -->
    <% if (accountData.account_type === "Employee" || accountData.account_type === "Admin") { %>
      <h3>Inventory Management</h3>
      <p>
        <a href="/inv/">Go to Inventory Management</a>
      </p>
    <% } %>
  <% } else { %>
    <h2>Welcome</h2>
    <p>Please log in to manage your account.</p>
  <% } %>
</section>
