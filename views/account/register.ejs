<!-- The content heading -->
<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<!-- Message block -->
<%- messages() %>

<!-- Display error -->
<% if (errors && !errors.isEmpty()) { %>
  <ul class="notice-registration">
    <% errors.array().forEach(error => { %>
      <% if (error.msg !== "Invalid value") { %>
        <li><%= error.msg %></li>
      <% } %>
    <% }) %>
  </ul>
<% } %>

<!-- Registration Form -->
<p class="required-fields">*All fields are required.</p>

<section class="section-container">
    <form id="registrationForm" action="/account/register" method="post" class="form">
        <label for="account_firstname">First name:</label>
        <input type="text" id="account_firstname" name="account_firstname" required
        value="<%= locals.account_firstname %>">
        
        <label for="account_lastname">Last name:</label>
        <input type="text" id="account_lastname" name="account_lastname" required
        value="<%= locals.account_lastname %>">
        
        <label for="account_email">Email Address:</label>
        <input type="email" id="account_email" name="account_email" required
        value="<%= locals.account_email %>">
        
        <span id="password-rules"
        class="password-rules">
            Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character
        </span>
        
        <label for="account_password">Password:</label>
        <input type="password" id="account_password" name="account_password" class="password-input" required
        aria-describedby="password-rules"
        pattern="^(?=.*[0-9])(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\\s).{12,}$">
        
        <button type="button" class="toggle-btn" data-toggle="password" aria-pressed="false">
            Show Password
        </button>
        
        <button type="submit" class="submit-btn">Register
        </button>
</form>
</section>

<!-- Import Show/Hide Password Toggle Function -->
<script src="/js/script.js"></script>