<!-- Content heading -->
<% if (title) { %>
  <h1><%= title %></h1>
<% } else { %>
  <%- res.redirect('/') %>
<% } %>

<!-- Flash message -->
<%- messages() %>

<!-- Display server-side validation errors -->
<% if (errors && !errors.isEmpty()) { %>
  <ul class="notice-failure">
    <% errors.array().forEach(error => { %>
      <% if (error.msg !== "Invalid value") { %>
        <li><%= error.msg %></li>
      <% } %>
    <% }) %>
  </ul>
<% } %>

<section class="section-container">
  <form id="updateForm" action="/inv/update" method="post" class="form">

    <!-- Classification dropdown (pre-built in utilities and passed in by controller) -->
    <label for="classificationList">Classification:</label>
    <%- classificationSelect %>

    <!-- Make -->
    <label for="inv_make">Make:</label>
    <input type="text" id="inv_make" name="inv_make" required placeholder="min of 3 characters"
      pattern="^[A-Za-z]+$"
      title="Make must be alphabetic characters only."
      value="<%= inv_make %>">

    <!-- Model -->
    <label for="inv_model">Model:</label>
    <input type="text" id="inv_model" name="inv_model" required placeholder="min of 3 characters"
      value="<%= inv_model %>">

    <!-- Description -->
    <label for="inv_description">Description:</label>
    <textarea id="inv_description" name="inv_description" required><%= inv_description %></textarea>

    <!-- Image -->
    <label for="inv_image">Image Path:</label>
    <input type="text" id="inv_image" name="inv_image" required placeholder="/images/vehicles/no-image.png" value="<%= inv_image %>">

    <!-- Thumbnail -->
    <label for="inv_thumbnail">Thumbnail Path:</label>
    <input type="text" id="inv_thumbnail" name="inv_thumbnail" required placeholder="/images/vehicles/no-image-tn.png" value="<%= inv_thumbnail %>">

    <!-- Price -->
    <label for="inv_price">Price:</label>
    <input type="number" id="inv_price" name="inv_price" required step="0.01" placeholder="decimal or integer" value="<%= inv_price %>">

    <!-- Year -->
    <label for="inv_year">Year:</label>
    <input type="number" id="inv_year" name="inv_year" required placeholder="4-digit year" pattern="\\d{4}" title="Year must be 4 digits." value="<%= inv_year %>">

    <!-- Miles -->
    <label for="inv_miles">Miles:</label>
    <input type="number" id="inv_miles" name="inv_miles" required placeholder="digits only" pattern="^[0-9]+$" title="Miles must be digits only." value="<%= inv_miles %>">

    <!-- Color -->
    <label for="inv_color">Color:</label>
    <input type="text" id="inv_color" name="inv_color" required
      pattern="^[A-Za-z]+$"
      title="Color must be alphabetic characters only."
      value="<%= inv_color %>">

    <button type="submit" class="submit-btn" disabled>Update Vehicle</button>

    <!-- Hidden Input -->
    <input type="hidden" name="inv_id"
    <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
    <% } %>>
  </form>
</section>

<script src="../../js/inv-update.js"></script>