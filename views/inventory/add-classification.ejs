<!-- The content heading -->
<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<!-- Message block -->
<%- messages() %>

<!-- Display error -->
<% if (errors && !errors.isEmpty()) { %>
  <ul class="notice-failure">
    <% errors.array().forEach(error => { %>
      <% if (error.msg !== "Invalid value") { %>
        <li><%= error.msg %></li>
      <% } %>
    <% }) %>
  </ul>
<% } %>

<!-- Add Classification Form -->
<section class="section-container">
    <form id="classificationForm" action="/inv/add-classification" method="post" class="form">
    
    <label for="classification_name">Classification Name:</label>

    <span class="add-classification-rule">
    NAME MUST BE ALPHABETIC CHARACTERS ONLY.
    </span>
    
    <input type="text" id="classification_name" name="classification_name" class="password-input" required aria-describedby="add-classification-rule" pattern="^[A-Za-z]+$" value="<%= locals.classification_name %>">
    
    <button type="submit" class="submit-btn">Add Classification
    </button>
</form>
</section>

